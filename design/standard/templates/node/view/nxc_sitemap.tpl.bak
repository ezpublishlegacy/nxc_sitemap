
{let $depth=$node.depth|int()}
{*let $siteurl = ezini( 'GeneralSettings', 'SiteUrl', 'nxc_sitemap.ini' )*}
{let $siteurl = ""|ezroot('no', 'full')}

{let $classFilter = ezini( 'Classes', 'Class_Filter_Array', 'nxc_sitemap.ini' )}
{let $classFilterType = ezini( 'Classes', 'Class_Filter_Type', 'nxc_sitemap.ini' )}

{let $mainNodeOnly = ezini( 'NodeSettings', 'Main_Node_Only', 'nxc_sitemap.ini' )}
{let $priority = ezini( 'NodeSettings', 'Node_Depth_Priority', 'nxc_sitemap.ini' )}

{if not($node.data_map.hide_in_sitemap.content)}
	{if ne($node.class_identifier, 'link')}
		<url>
			{if eq($node.class_identifier, 'file')}
				<loc>{concat(concat('content/download/', $node.data_map.file.contentobject_id, '/', $node.data_map.file.id)|ezroot('no', 'full'))|extlinkfix(del_layout)}</loc>
			{else}
				<loc>{concat($node.url_alias|ezroot('no', 'full'))|extlinkfix(del_layout)}</loc>
			{/if}
			<lastmod>{$node.object.modified|datetime( 'custom', '%Y-%m-%d' )}</lastmod>
			<priority>{if eq($depth, 1)}{$priority[0]}{else}{$priority[5]}{/if}</priority>
		</url>
	{/if}
{/if}

{let list_items=array()  }
{set list_items=fetch_alias(nxc_sitemap, hash( parent_node_id, $node.node_id,
							sort_by, $node.sort_array,
							class_filter_type, $classFilterType,
							class_filter_array, $classFilter,
							main_node_only, $mainNodeOnly ) )}

{section var=child loop=$list_items}
   {node_view_gui view=nxc_sitemap content_node=$child}
{/section}

